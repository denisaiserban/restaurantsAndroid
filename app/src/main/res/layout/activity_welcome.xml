<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/welcomeActivity"
    tools:context=".WelcomeActivity"
    android:background="@drawable/brunch_cuba_food">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/welcome_text_shape"
        android:fontFamily="@font/vesper_libre_bold"
        android:gravity="center_vertical|center_horizontal"
        android:text="Welcome to Restaurants"
        android:textColor="@android:color/white"
        android:textSize="18dp"
        android:textStyle="bold"
        android:padding="@dimen/padding"
        android:drawableStart="@mipmap/baseline_restaurant_menu_white_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.377" />

</androidx.constraintlayout.widget.ConstraintLayout>