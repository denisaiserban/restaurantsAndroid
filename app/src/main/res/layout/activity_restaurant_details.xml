<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RestaurantDetailsActivity">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="283dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_max"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewPager">

        <TextView
            android:id="@+id/restaurantNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/vesper_libre_bold"
            android:padding="@dimen/padding"
            android:text="@string/name"
            android:textSize="@dimen/text_size_title" />

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/vesper_libre_medium"
            android:text="@string/description"
            android:textSize="@dimen/text_size_normal" />

        <TextView
            android:id="@+id/addressTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:fontFamily="@font/vesper_libre_medium"
            android:padding="@dimen/padding"
            android:text="@string/address"
            android:textSize="@dimen/text_size_normal" />

        <TextView
            android:id="@+id/openingTimeTextView"
            android:layout_width="wrap_content"
            android:background="@drawable/background_shape"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:drawableStart="@mipmap/baseline_schedule_black_24"
            android:fontFamily="@font/vesper_libre_medium"
            android:gravity="center_vertical"
            android:padding="@dimen/padding"
            android:text="OpeningTime"
            android:textSize="@dimen/text_size_normal"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/green"
            android:gravity="center_vertical|center_horizontal"
            android:padding="@dimen/padding"
            android:text="Rezerva masa" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>